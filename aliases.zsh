# Zsh
alias zshconfig="nano ~/.zshrc"
alias ohmyzsh="nano ~/.oh-my-zsh"
alias reloadcli="source $HOME/.zshrc"

# Directories
alias dotfiles="cd $DOTFILES"
alias workspace="cd $HOME/workspace"

# Directory traversal
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

